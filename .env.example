# HOPE Backend Environment Configuration
# Copy to .env and fill in actual values
# NEVER commit .env to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
HOPE_ENV=development
HOPE_DEBUG=false
HOPE_LOG_LEVEL=INFO
HOPE_API_VERSION=v1
HOPE_CORS_ORIGINS=["http://localhost:3000"]

# =============================================================================
# DATABASE - PostgreSQL
# =============================================================================
# Production database connection
HOPE_DB_HOST=localhost
HOPE_DB_PORT=5432
HOPE_DB_NAME=hope_db
HOPE_DB_USER=hope_user
HOPE_DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
HOPE_DB_POOL_SIZE=10
HOPE_DB_MAX_OVERFLOW=20

# Field-level encryption key (32 bytes, base64 encoded)
# Generate with: python -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
HOPE_ENCRYPTION_KEY=CHANGE_ME_GENERATE_32_BYTE_KEY

# =============================================================================
# AUTHENTICATION - JWT
# =============================================================================
# Secret key for JWT signing (minimum 256 bits)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
HOPE_JWT_SECRET_KEY=CHANGE_ME_GENERATE_SECRET_KEY
HOPE_JWT_ALGORITHM=HS256
HOPE_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
HOPE_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# Primary provider: openai | gemini | gemini_flash (recommended)
HOPE_LLM_PRIMARY_PROVIDER=gemini_flash

# OpenAI Configuration
HOPE_OPENAI_API_KEY=sk-CHANGE_ME
HOPE_OPENAI_MODEL=gpt-4-turbo-preview
HOPE_OPENAI_MAX_TOKENS=1024
HOPE_OPENAI_TEMPERATURE=0.7

# Google Gemini Configuration
HOPE_GEMINI_API_KEY=CHANGE_ME
HOPE_GEMINI_MODEL=gemini-pro

# =============================================================================
# VECTOR DATABASE - Pinecone (Primary)
# =============================================================================
HOPE_VECTOR_DB_PROVIDER=pinecone
HOPE_PINECONE_API_KEY=CHANGE_ME
HOPE_PINECONE_ENVIRONMENT=gcp-starter
HOPE_PINECONE_INDEX_NAME=hope-emotional-history

# =============================================================================
# VECTOR DATABASE - Weaviate (Alternative)
# =============================================================================
HOPE_WEAVIATE_URL=http://localhost:8080
HOPE_WEAVIATE_API_KEY=CHANGE_ME

# =============================================================================
# SAFETY & RATE LIMITING
# =============================================================================
HOPE_RATE_LIMIT_REQUESTS_PER_MINUTE=60
HOPE_SAFETY_HARD_FILTER_ENABLED=true
HOPE_AUDIT_LOG_ENABLED=true

# =============================================================================
# MONITORING (Future Integration)
# =============================================================================
